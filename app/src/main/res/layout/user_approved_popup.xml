<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_dialog_curved"
        android:padding="@dimen/_22sdp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:text="User Approved"
            android:textAllCaps="false"
            android:textSize="@dimen/_18sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:text="Payment Received"
            android:textAllCaps="false"
            android:textSize="@dimen/_18sdp" />
        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_26sdp"
            android:paddingEnd="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/button_curved"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:text="Done"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>